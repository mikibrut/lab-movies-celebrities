<h2>Edit {{this.title}}</h2>
<form action="/movies/edit/{{this._id}}" method="post">
    <label for="title">Movie title:</label>
    <input type="text" name="title" value="{{this.title}}">
    <label for="genre">Genre:</label>
    <input type="text" name="genre" value="{{this.genre}}">
    <label for="plot">Plot:</label>
    <input type="text" name="plot" value="{{this.plot}}">
    <label for="cast">Who's in the movie?</label>
    <select name="cast" id="cast" multiple>
        {{#each this.cast}}
            <option value="{{this._id}}">{{this.name}}</option>
        {{/each}}
    </select>
    <button type="submit">Submit</button>
</form>
